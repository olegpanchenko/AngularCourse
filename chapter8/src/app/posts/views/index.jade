#wrapper
  div(ng-include='', src="'app/posts/views/header.html'", onload='userName = user.name')
  #page-wrapper
    .container-fluid
      .row
        .col-sm-12
          h3.page-header Posts
      .row
        .col-sm-12
          .post(ng-repeat='post in posts track by $index')
            h4 {{post.title.rendered}}
            em {{post.date}}
            p(ng-bind-html='post.excerpt.rendered')
            a.btn.btn-info.btn-sm(ng-href='/posts/{{post.id}}') Read more
            a.btn.btn-warning.btn-sm(ng-href='/posts/{{post.id}}/edit') Edit
